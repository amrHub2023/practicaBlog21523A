<%-include('partials/header')  %>
<%-include('partials/navbar')  %>



    <div class="container mt-5">
      <div class="parrafo">
        <div class="row">
            <div class="col">  

                <h1 class="text-center" >Crear una Publicacion</h1>
                <form action="#" id="form-guardar">
                    <div class="mb-3">
                        <input type="text" id="titulo-post" class="form-control" placeholder="Título del Post">
                    </div>
                                
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea id="detalle-post" class="form-control" placeholder="Ingrese detalle" id="floatingTextarea" style="height: 100px"></textarea>
                            <label for="floatingTextarea">Descripción</label>
                          </div>
                    </div>
                   
                    <div class="mb-3">
                        <input type="text" id="url-img" class="form-control" placeholder="Url imagen">                        
                    </div>
                    <div class="mb-3">
                        <input type="text" id="url_producto" class="form-control" placeholder="url Articulo">
                    </div>
                    
                    <div class="mb-3">
                        <input type="text" id="nombre"class="form-control" placeholder="Nombre del Autor">
                    </div>
                    <div class="mb-3">
                        <input type="date" id="fecha" name="Fecha de creacion" placeholder="Fecha de creacion">
                    </div>
                    
                    <button type="submit" id="btn-guardar" class="btn btn-primary">
                        Guardar
                    </button>
                </form>
            </div>
        </div>     
      </div>
    </div>


    <script src="/js/admin.js"></script>

<%-include('partials/footer')  %>