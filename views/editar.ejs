<%-include('partials/header')  %>
<%-include('partials/navbar')  %>

 
    <div class="container mt-5">
        <div class="row">
          <div class="col">  
            <div class="parrafo-editar">                 
                <h1 class="text-center py-3">Editar Una Publicacion</h1>                                   

                <form action="#" id="form-guardar"  data-id="<%= id  %>"> 
                    <div class="mb-3">
                        <input type="text" id="titulo-post" class="form-control"  placeholder="Título del Post">
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea id="detalle-post" class="form-control" placeholder="Ingrese detalle" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Descripción de las Publicaciones</label>
                          </div>
                    </div>                    
                        
                    <div class="mb-3">
                        <input type="text" id="url-img" class="form-control" placeholder="Url imagen">
                    </div>
                    <div class="mb-3">
                        <input type="text" id="url_producto" class="form-control" placeholder="Url producto">
                    </div>
                    <div class="mb-3">
                        <input type="text" id="nombre" class="form-control" placeholder="Autor del post">
                    </div>

                    <div class="mb-3">
                        <input type="date" name="" id="fecha">
                    </div>

                    <button type="submit" id="btn-guardar" class="btn btn-primary">
                        Guardar
                    </button>
                </form>
            </div>
          </div>    
        </div>
    </div>


    <script src="/js/principal.js"></script>
    <script src="/js/editar.js"></script>

<%-include('partials/footer')  %>